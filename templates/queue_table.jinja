<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/queue_style.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Kanit" rel='stylesheet' type='text/css'>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.1/dist/chart.min.js"></script>
    <title>My Table</title>
</head>
<style>

</style>

<body>
    <div class="container">
        <h1>Queues</h2>
            <div class="table-container">
                <table id="attendance-table" class="table">
                    <thead>
                        <tr>
                            <th>Queue index</th>
                            <th>Queue id</th>
                            <th>Stuent name</th>
                            <th>time taken</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in data %}
                        {% if row[1] == queue_id %}
                        <tr style="background-color: rgb(194, 193, 193);">
                            <td>{{ row[0] }}</td>
                            <td>{{ row[1] }}</td>
                            <td>{{ row[2] }}</td>
                            <td>{{ row[3] }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td>{{ row[0] }}</td>
                            <td>{{ row[1] }}</td>
                            <td>{{ row[2] }}</td>
                            <td>{{ row[3] }}</td>
                        </tr>
                        {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>

    <script src="{{url_for('static', filename='script/queue_table_script.js')}}"></script>
</body>

</html>